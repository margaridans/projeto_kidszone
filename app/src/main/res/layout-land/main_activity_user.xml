<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_activity"
    xmlns="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:titleTextColor="#ffffff">

        <TextView
            android:id="@+id/nome_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="450dp"
            android:text=""
            android:textColor="@color/colorBlack"
            android:textSize="15dp" />

    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="582dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:background="@drawable/logo"
            android:layout_marginLeft="-30dp"
            android:text="@string/descImagemLogo" />


        <LinearLayout
            android:layout_width="353dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnJogar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/gamer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginStart="-55dp"
                android:layout_marginTop="80dp"
                android:text="@string/jogar"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <Button
                android:id="@+id/btnDicas"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="75dp"
                android:background="@drawable/ideias"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginStart="-55dp"
                android:layout_marginTop="80dp"
                android:text="@string/dicas"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <Button
                android:id="@+id/btnLocais"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="75dp"
                android:background="@drawable/mapa" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginLeft="-60dp"
                android:layout_marginTop="80dp"
                android:text="@string/mapa"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="sans" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>